{
  "name": "tokyo-web3-hackathon",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build --base=/tokyo-web3-hackathon/",
    "codegen:contract:types": "typechain --target ethers-v5 --out-dir './src/types' './src/abi/*.json'",
    "check:types": "tsc --noEmit -p tsconfig.json",
    "preview": "vite preview",
    "lint": "eslint --fix 'src/**/*.{js,jsx,ts,tsx}'",
    "format": "prettier --write **/*.{ts,tsx} --ignore-path .prettierignore",
    "prepare": "cd .. && husky install frontend/.husky"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": ["npm run lint","npm run check:types"],
    "**/*.{ts,tsx}": "npm run format"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.3.6",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@metamask/detect-provider": "^2.0.0",
    "axios": "^1.1.3",
    "ethers": "^5.7.2",
    "framer-motion": "^6.5.1",
    "metamask-react": "^2.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.3",
    "react-youtube": "^10.0.0"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.1.1",
    "@types/node": "^18.11.3",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "typechain": "^8.1.1",
    "typescript": "^4.6.4",
    "vite": "^3.1.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  }
}
